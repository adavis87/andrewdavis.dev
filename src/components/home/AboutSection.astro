---
import {SocialLinkId} from '../../lib/types';
import FlexColumn from '../atoms/FlexColumn.astro';
import FlexRow from '../atoms/FlexRow.astro';
import SocialTextLink from '../atoms/SocialTextLink.astro';
import Spacer from '../atoms/Spacer.astro';
import Text from '../atoms/Text.astro';
---

<div class="about-section-wrapper">
  <FlexColumn flex>
    <Text as="h3" monospace> I build software with a focus on accessibility and performance </Text>
    <Spacer y={12} />
    <Text as="h3" monospace>Thank you for visiting my corner of the internet! <span role="img">ðŸ¤ </span></Text>
    <Spacer y={28} />
    <FlexRow gap={{mobile: 28, desktop: 32}}>
      <SocialTextLink type={SocialLinkId.Email} />
      <SocialTextLink type={SocialLinkId.GitHub} />
      <SocialTextLink type={SocialLinkId.LinkedIn} />
      <SocialTextLink type={SocialLinkId.Twitter} />
    </FlexRow>
  </FlexColumn>

  <style>
    .about-section-wrapper {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: flex-start;
      gap: 40px;
    }
    @media (max-width: 760px) {
      .about-section-wrapper {
        flex-direction: column;
        align-items: flex-start;
        justify-content: stretch;
        gap: 20px;
      }
    }
  </style>
</div>
